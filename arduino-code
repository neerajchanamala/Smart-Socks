#include <Wire.h>

#include <MPU6050.h>

 

MPU6050 mpu;

 

const int forcePin = A0;

const int temperaturePin = A1;

 

void setup() {

  Serial.begin(9600);

 

  Wire.begin();

  mpu.initialize();

 

  // Calibrate the MPU6050 sensor

  mpu.calibrateGyro();

  mpu.setDMPEnabled(true);

 

  pinMode(forcePin, INPUT);

  pinMode(temperaturePin, INPUT);

}

 

void loop() {

  // Read force sensor value

  int forceValue = analogRead(forcePin);

 

  // Read temperature sensor value

  int temperatureValue = analogRead(temperaturePin);

  float voltage = (temperatureValue / 1024.0) * 5.0;

  float temperatureC = ((voltage - 0.5) * 100);

 

  // Read rotation sensor data

  int16_t ax, ay, az, gx, gy, gz;

  mpu.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);

  // Print the sensor data

  Serial.print("Force: ");

  Serial.println(forceValue);

  Serial.print("Temperature: ");

  Serial.print(temperatureC);

  Serial.println(" Â°C");

  Serial.print("Rotation - ");

  Serial.print("Gyro X: ");

  Serial.print(gx);

  Serial.print(" | Gyro Y: ");

  Serial.print(gy);

  Serial.print(" | Gyro Z: ");

  Serial.println(gz);

 

  Serial.println("--------------")

 

delay(1000); // Adjust delay as needed

}
